        $(document).ready(function () {
            $.noConflict();
            var table = $('#sort').DataTable();

            // Event listener to the two range filtering inputs to redraw on input
            $('#Build_ID, #min, #max').keyup(function () {
                table.draw();
            });

        });


    </script>
